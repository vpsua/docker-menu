version: '2'
services:
  cassandra:
    image: 'bitnami/cassandra:latest'
    ports:
      - '7000:7000'
      - '7001:7001'
      - '9042:9042'
      - '9160:9160'
    volumes:
      - './cassandra_data:/bitnami/cassandra'
    environment:
      - CASSANDRA_USER: {{ CASSANDRA_USER }}
      - CASSANDRA_PASSWORD: {{ CASSANDRA_PASSWORD }}
    restart: unless-stopped
