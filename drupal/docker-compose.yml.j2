version: '2'

services:

  drupal:
    image: drupal:latest
    links: 
      - postgres
    ports:
      - 80:80
    volumes:
      - /var/www/html/modules
      - /var/www/html/profiles
      - /var/www/html/themes
      - /var/www/html/sites
    restart: always

  postgres:
    image: postgres:latest
    environment:
      POSTGRES_DB: drupal_db
      POSTGRES_USER: drupal
      POSTGRES_PASSWORD: {{ POSTGRES_PASSWORD }}
    restart: always
