web:
  image: alexcheng/magento2
  restart: unless-stopped
  ports:
    - "80:80"
  links:
    - mysql

mysql:
  image: mariadb
  restart: unless-stopped
  environment:
    MYSQL_ROOT_PASSWORD: {{ MYSQL_ROOT_PASSWORD }}
    MYSQL_DATABASE: magento_db
    MYSQL_USER: magento
    MYSQL_PASSWORD: {{ MYSQL_MAGENTO_PASSWORD }}
