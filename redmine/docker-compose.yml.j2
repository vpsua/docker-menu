version: '2'

services:

  redmine:
    image: redmine:passenger
    ports:
      - 80:3000
    environment:
      REDMINE_DB_MYSQL: db
      REDMINE_DB_PASSWORD: {{ MYSQL_ROOT_PASSWORD }}
    depends_on:
      - db
    restart: unless-stopped

  db:
    image: mariadb
    environment:
      MYSQL_ROOT_PASSWORD: {{ MYSQL_ROOT_PASSWORD }}
      MYSQL_DATABASE: redmine
    restart: unless-stopped
